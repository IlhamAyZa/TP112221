#include <stdio.h>
#include <stdlib.h>

int main()
{
    double* arrOfNumbers = (double*) malloc(100 * sizeof(double));
    
    int i;
    for (i = 0; i < 100; i++){
        arrOfNumbers[i] = rand() %255 - 128;
        printf("%.2f ", arrOfNumbers[i] );
    }
    
    arrOfNumbers = realloc(arrOfNumbers, 300 * sizeof(double));
    
    for (i = 99; i < 300; i++){
        arrOfNumbers[i] = rand() %500 - 250;
        printf("%.2f ", arrOfNumbers[i] );
    }
    
    return 0;
}
