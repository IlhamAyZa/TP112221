#include <stdio.h>
#include <stdlib.h>
 
int main()
{
    int row = 5, col = 5, i, j, count;
 
    double* array[row];
    for (i = 0; i < r; i++){
        array[i] = (double*)malloc(c * sizeof(double));
    }
        
    count = 0;
    for (i = 0; i < r; i++){
        for (j = 0; j < c; j++){
            array[i][j] = ++count;
        }
    }
    
    for (i = 0; i < row; i++){
        for (j = 0; j < col; j++){
            printf("%.2f ", array[i][j]);
        }
    }
    
